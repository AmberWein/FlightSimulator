<Window x:Class="FlightSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightSimulator"
		xmlns:Views="clr-namespace:FlightSimulator.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="900">
    <Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Margin="0,0,-0.4,100.4"/>

        <Button x:Name="NextButton" Content="Start" Click="NextButton_Click" HorizontalAlignment="Left" Margin="1045,720,0,0" VerticalAlignment="Top" Width="95" Height="25" />
        <Button x:Name="BackButton" Content="Back" Click="BackButton_Click" HorizontalAlignment="Left" Margin="60,710,0,0" VerticalAlignment="Top" Width="115" Height="25" Visibility="Hidden"/>
    </Grid>

</Window>
