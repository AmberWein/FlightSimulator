<Page x:Class="FlightSimulator.Views.SetPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FlightSimulator.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SetPage">

    <Grid>
        <Grid.Background >
            <ImageBrush ImageSource="Images/set_airplane.jpg"/>
        </Grid.Background>

        <TextBlock  TextWrapping="Wrap" Background="Transparent"
                 Text="Hello and welcome to our flight simulator!"
 FontSize="38" HorizontalAlignment="Center" Margin="42,44,39,348" Width="719"/>
        <TextBlock  TextWrapping="Wrap" Background="Transparent" 
                 Text="First, before we can get to work, let us learn a little more about your flight."
 FontSize="28" HorizontalAlignment="Center" Margin="42,126,39,245" Width="719"/>
        <TextBlock  TextWrapping="Wrap" Background="Transparent" 
                 Text="To do that, please insert a path to the required CSV file."
 FontSize="28" HorizontalAlignment="Center" Margin="42,206,39,200" Width="719"/>
        <TextBox x:Name="pathBox"  FontSize="14" Height="30" Margin="0,270,0,149.6" HorizontalAlignment="Center" Width="300" BorderBrush="Black" BorderThickness="2"
                      TextChanged="pathBox_TextChanged"/>
        <TextBlock x:Name="invalidMessage" Text="path is invalid" TextAlignment="Center" Foreground="red" HorizontalAlignment="Center" Margin="365,315,362,114.6" Visibility="Hidden"/>




    </Grid>
</Page>
