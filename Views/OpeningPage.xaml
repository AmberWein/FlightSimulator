<Page x:Class="FlightSimulator.Views.OpeningPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FlightSimulator.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OpeningPage">

    <Grid RenderTransformOrigin="0.499,0.326">
        <Grid.Background >
            <ImageBrush ImageSource="Images/airplane.jpg"/>
        </Grid.Background>

        <TextBox AcceptsReturn="True" TextWrapping="Wrap" Height="150" Background="Transparent" BorderBrush="Transparent"
                 Text="Flight simulator" FontSize="100" HorizontalAlignment="Center" Margin="51,56,57,244"/>

        <Button x:Name="startButton" Content=" Start Simulator " VerticalAlignment="Top" HorizontalAlignment="Center" Margin="285,370,320,0" FontWeight="Bold"
                    IsEnabled="False" Height="24" Width="195"/>
    </Grid>
</Page>
