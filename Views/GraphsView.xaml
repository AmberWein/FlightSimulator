<UserControl x:Class="FlightSimulator.Views.GraphsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulator.Views"
             xmlns:oxy="http://oxyplot.org/wpf"
             xmlns:Syncfusion="http://schemas.syncfusion.com/wpf"

    mc:Ignorable="d" 
    
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <oxy:PlotView x:Name="Plot1" Model="{Binding Path= PlotModel}" Margin="10" Grid.Row="1" Background="AliceBlue">
        </oxy:PlotView>
        <Syncfusion:ComboBoxAdv x:Name="atrributesBox" VerticalAlignment="Top" Margin="10,5,0,0"
                SelectedValue="{Binding VM_ChosenAttribute}" HorizontalAlignment="Left" Width="780" Syncfusion:SkinManager.ActiveColorScheme="Purple" SelectionChanged="atrributesBox_SelectionChanged">
            
        </Syncfusion:ComboBoxAdv>
       

    </Grid>
</UserControl>
