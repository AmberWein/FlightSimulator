<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulator.Views"
             xmlns:Syncfusion="http://schemas.syncfusion.com/wpf" x:Class="FlightSimulator.Views.DetectorView"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="360">
    <Grid Background="DarkGray" Margin="0,0,0,0" Height="30">
        <ComboBox x:Name="DetectorComboBox" ItemsSource="{Binding VM_DetectorsList}" HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Center" Width="116" Height="25"
                  SelectedValue="{Binding VM_CurrentDetector}"/>
        <Button x:Name="DetectButton" Click="DetectButton_Click" Content="Detect Anomalies" HorizontalAlignment="Left" Margin="220,0,0,0" VerticalAlignment="Center" Width="130" IsEnabled="{Binding VM_IsDetectorOn}" Height="25"/>
    </Grid>
</UserControl>
