<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulator.Views"
             xmlns:Syncfusion="http://schemas.syncfusion.com/wpf" x:Class="FlightSimulator.Views.DetectorView"
             mc:Ignorable="d" 
             d:DesignHeight="210" d:DesignWidth="405">
    <Viewbox Height="205" Width="250" >
        <Grid  Height="200">
            <ComboBox x:Name="DetectorComboBox" ItemsSource="{Binding VM_DetectorsList}" HorizontalAlignment="Center" Margin="78,0,72,18" VerticalAlignment="Bottom" Width="150" Height="30"
                  SelectedValue="{Binding VM_CurrentDetector}" Background="CadetBlue"/>
            <Button Content="Detect Anomalies" Background="CadetBlue" HorizontalAlignment="Center" VerticalAlignment="Center" Width="170" FontSize="18" FontWeight="ExtraBold" FontStretch="UltraExpanded"  IsEnabled="{Binding VM_IsDetectorOn}" Height="90"/>


        </Grid>
    </Viewbox>
    
</UserControl>
